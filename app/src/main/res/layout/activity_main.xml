<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lab.openclassrooms.com.moodtracker.ui.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!--suppress AndroidMissingOnClickHandler -->
    <ImageButton
        android:id="@+id/addMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/TODO"
        android:onClick="myMood"
        android:background="@null"
        app:srcCompat="@mipmap/ic_note_add_black"
        android:layout_alignParentLeft="true"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/TODO"
        android:onClick="history"
        android:background="@null"
        app:srcCompat="@mipmap/ic_history_black"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription" />

</RelativeLayout>
